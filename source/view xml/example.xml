			</view>
			<view id="prototype-example-item-1" background-color="white" height="50">
				
			</view>
		</list:view>
	</view>
	
	<view id="main-content" background-color="slategrey" width="75%" height="100%" constraints="L|R|0|==|100|side-menu">
		<label id="hurray-label" text="Content Goes Here" color="darkorange" font="Open Sans" size="40" center="true" />
	</view>
	
</example:view>